%html

  %head
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %title My Mood

    = stylesheet_link_tag 'bootstrap.min'
    = stylesheet_link_tag 'index'
    = stylesheet_link_tag 'bootstrap-responsive.min'
    = stylesheet_link_tag 'jquery-ui'

  %body
    %div.navbar.navbar-inverse.navbar-fixed-top
      %div.navbar-inner
        %div.container-fluid
          %div.brand MyMood
          %ul.nav
            %li.divider-vertical
            %li <a href="#">Home</a>
            %li.divider-vertical
            %li <a href="#">Settings</a>
          %ul.nav.pull-right
            %li#user_pic=image_tag 'fake_user_small.png'
            %li <a href="#">User</a>
            %li.divider-vertical
            %li <a href="#">Logout</a>

    %div.content
      = session.inspect
      %h1 OMG HI ANDRE
      = flash[:notice]
      %h2 Current Categories
      %table
        %tbody
          - @categories.each do |cat|
            %tr
              %td= cat.name
      -#%td= cat.sequence.number
      -#%td= cat.sequence.unit
      %h3 Add New Category
      = form_for andre_path do
        = label :category, :name, "Category Name"
        = text_field :category, 'name'
        -#= label :category, :number, "Send Every"
        -#= text_field :category, 'number', :type => 'number'
        -#%select{:name => 'unit'}
        -#%option{:value => 1}= "Minute"
        -#%option{:value => 2}= "Hour"
        -#%option{:value => 3}= "Day"
        -#%option{:value => 4}= "Week"
        = submit_tag 'Add Category'


      %h2 Current Messages
      %table
        %tbody
          - @messages.each do |message|
            %tr
              %td= 'Message:'
              %td= message.text
              -#%td= message.category.name

      %h3 Add New Message
      = form_for andre_path do
        = label :message, :text, "Message Text"
        = text_field :message, 'text'
        %select{:name => "Category"}
          - @categories.each do |cat|
            %option{:value => cat.name}= "#{cat.name}"
        = submit_tag 'Add Message'

    = javascript_include_tag 'bootstrap.min.js'
    = javascript_include_tag 'jquery-1.10.2.min.js'
    = javascript_include_tag 'index.js'
    = javascript_include_tag 'jquery-ui'
