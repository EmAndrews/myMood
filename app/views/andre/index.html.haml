%html

  %head
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %title My Mood

    = stylesheet_link_tag 'bootstrap.min'
    = stylesheet_link_tag 'index'
    = stylesheet_link_tag 'bootstrap-responsive.min'
    = stylesheet_link_tag 'jquery-ui'

  %body
    %div.navbar.navbar-inverse.navbar-fixed-top
      %div.navbar-inner
        %div.container-fluid
          %div.brand MyMood
          %ul.nav
            %li.divider-vertical
            %li <a href="#">Home</a>
            %li.divider-vertical
            %li <a href="#">Settings</a>
          %ul.nav.pull-right
            %li#user_pic=image_tag 'fake_user_small.png'
            %li <a href="#">User</a>
            %li.divider-vertical
            %li <a href="#">Logout</a>

    %div.content.offset1
      %h1 OMG HI ANDRE
      = flash[:notice]
      %div.row-fluid
        %div.well.span5
          %h2 Current Categories
          %table
            %tbody
              - @categories.each do |cat|
                %tr
                  %td= cat.name
                  %td
                    = form_tag andre_path, :method => :delete do
                      -# HACK HACK FIX ME THIS DOESN'T WORK PROPERLY
                      = hidden_field :category_id, cat.id
                      = submit_tag 'X'
        %div.well.span5
          %h2 Add New Category
          = form_for andre_path do
            = label :category, :name, "Category Name"
            = text_field :category, 'name'
            = submit_tag 'Add Category'


      %div.row-fluid
        %div.well.pre-scrollable.span5
          %h2 Current Messages
          %table
            %tbody
              - @messages.each do |message|
                %tr
                  %td= message.text
                  - if (message.category)
                    %td= message.category.name
                  - else 
                    %td No Category
                  %td
                    = form_tag andre_path, :method => :delete do
                      -# HACK HACK FIX ME THIS DOESN'T WORK PROPERLY
                      = hidden_field :message_id, message.id
                      = submit_tag 'X'
        %div.well.span5
          %h2 Add New Message
          = form_for andre_path do
            = label :message, :text, "Message Text"
            = text_field :message, 'text'
            = label :message, :category, "Message Category"
            = select :message, :category, @categories.map{|c| [c.name, c.name]}
            = submit_tag 'Add Message'

    = javascript_include_tag 'bootstrap.min.js'
    = javascript_include_tag 'jquery-1.10.2.min.js'
    = javascript_include_tag 'index.js'
    = javascript_include_tag 'jquery-ui'
