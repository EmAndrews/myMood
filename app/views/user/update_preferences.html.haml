%html

  %head
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %title My Mood

    = stylesheet_link_tag 'bootstrap.min'
    = stylesheet_link_tag 'index'
    = stylesheet_link_tag 'bootstrap-responsive.min'
    = stylesheet_link_tag 'jquery-ui'

  %body
    %div.navbar.navbar-inverse.navbar-fixed-top
      %div.navbar-inner
        %div.container-fluid
          %div.brand MyMood
          %ul.nav
            %li.divider-vertical
            %li <a href="#">Home</a>
            %li.divider-vertical
            %li <a href="#">Settings</a>
          %ul.nav.pull-right
            %li#user_pic=image_tag 'fake_user_small.png'
            %li <a href="#">User</a>
            %li.divider-vertical
            %li <a href="#">Logout</a>

    %div.content
      = flash[:notice]
      %h2 Categories:
      = form_tag update_pref_path, :method => :put do
        - @categories.each do |cat|
          = check_box_tag "category_id[]",cat.id, @subscribed_categories.include?(cat.id.to_s)
          = cat.name
          %br
        = submit_tag 'Subscribe', :id => 'subscribe'
    
    %div.content
      %h3 Schedule Preferences
      = form_tag update_pref_path, :method => :put do
        - @days.each do |day|
          = day
          = check_box_tag "days[]", "#{day}", @subscribed_days.include?(day)
        = submit_tag 'Update', :id => 'availability' 

    = javascript_include_tag 'bootstrap.min.js'
    = javascript_include_tag 'jquery-1.10.2.min.js'
    = javascript_include_tag 'index.js'
    = javascript_include_tag 'jquery-ui'
